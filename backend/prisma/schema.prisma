generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationStatus {
  NONE
  PENDING
  VERIFIED
  REJECTED
}

model Student {
  id                 Int      @id @default(autoincrement())
  nim                String   @unique
  passwordHash       String
  mustChangePassword Boolean  @default(true)
  verificationStatus VerificationStatus @default(NONE)
  verificationCardPath String?
  verificationSelfiePath String?
  verificationSubmittedAt DateTime?
  verificationVerifiedAt DateTime?
  verificationRejectedAt DateTime?
  verificationRejectReason String?
  voteReceipts       VoteReceipt[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model VoteReceipt {
  id          Int      @id @default(autoincrement())
  studentId   Int
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  electionId  BigInt
  candidateId BigInt
  txHash      String
  mode        String
  createdAt   DateTime @default(now())

  @@unique([studentId, electionId])
}
